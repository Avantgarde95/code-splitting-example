{
    "name": "code-splitting-example",
    "version": "0.0.1",
    "engines": {
        "node": "16.x",
        "npm": "7.x"
    },
    "description": "Example of Webpack code splitting",
    "author": "Hunmin Park",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-markdown": "^7.1.0"
    },
    "devDependencies": {
        "webpack": "^5.58.1",
        "webpack-cli": "^4.9.0",
        "webpack-dev-server": "^4.3.1",
        "typed-scss-modules": "^4.1.1",
        "concurrently": "^6.3.0",
        "typescript": "^4.4.3",
        "sass": "^1.42.1",
        "ts-loader": "^9.2.6",
        "css-loader": "^6.4.0",
        "sass-loader": "^12.1.0",
        "mini-css-extract-plugin": "^2.4.2",
        "clean-webpack-plugin": "^4.0.0",
        "html-webpack-plugin": "^5.3.2",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsdoc": "^36.1.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "stylelint": "^13.13.1",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-scss": "^3.21.0",
        "@types/react": "^17.0.27",
        "@types/react-dom": "^17.0.9",
        "@types/node": "^16.10.3"
    },
    "scripts": {
        "serve": "concurrently \"tsm \\\"src/**/*.{css,scss}\\\" --watch\" \"webpack serve --config ./config/webpack.config.js --mode=development --progress\"",
        "build": "tsm \"src/**/*.{css,scss}\" && webpack --config ./config/webpack.config.js --mode=production --progress",
        "lint": "eslint --config ./config/eslint.config.js ./src/**/*.{js,ts,jsx,tsx}",
        "lint:fix": "eslint --config ./config/eslint.config.js --fix ./src/**/*.{js,ts,jsx,tsx}"
    }
}